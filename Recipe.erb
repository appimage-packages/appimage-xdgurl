#!/bin/bash
rm -rf /app || true # Clean up from previous runs
rm /out/* || true


# make sure lib and lib64 are the same thing
mkdir -p /app/usr/lib
cd  /app/usr
ln -s lib lib64

mkdir -p /app/usr/bin /app/usr/share/mime  /out

APP=<%= proper_name %>
LOWERAPP=<%= name %>

# Get helper functions
wget -q https://github.com/probonopd/AppImages/raw/master/functions.sh -O ./functions.sh
. ./functions.sh
rm -f functions.sh

#get deps
yum -y install perl-URI.noarch gnome-common gnome-icon-theme gtk2-devel tcl-devel tk-devel expect-devel mesa-libGLU-devel gstreamer-devel webkitgtk-devel \
gstreamer-plugins-base-devel freeglut-devel libffi-devel pygtk2-devel

function get_assistant {
  # Build AppImageKit
if [ ! -d AppImageKit ] ; then
  git clone  --depth 1 https://github.com/probonopd/AppImageKit.git /AppImageKit
fi

cd /AppImageKit/
git_pull_rebase_helper
./build.sh
cp AppImageAssistant.AppDir/AppRun /app/
chmod a+x /app/AppRun
chmod a+x ./AppImageAssistant*
cd ..
}
get_assistant
#deps
# Python 3.3.5:
wget http://python.org/ftp/python/3.3.5/Python-3.3.5.tar.xz
tar xf Python-3.3.5.tar.xz
cd Python-3.3.5
./configure --prefix=/app/usr/
make && make altinstall

git clone https://github.com/wxWidgets/wxWidgets
cd wxWidgets
./configure --prefix=/app/usr/
make && make install


git clone https://github.com/xdgurl/xdgurl
cd xdgurl
make -j 8
make install

VERSION=$(git describe | sed -e 's/-g.*$// ; s/^v// ; s/-r.*$//')

cd ..

cat > AppRun << EOF
#!/bin/bash

HERE="$(dirname "$(readlink -f "${0}")")"
export PYTHONPATH="${HERE}"/usr/lib/python3.3:"$PYTHONPATH"
export LD_LIBRARY_PATH="${HERE}/usr/lib/:${LD_LIBRARY_PATH}"
export PATH="${HERE}/:${PATH}"

exec "${HERE}"/usr/bin/xdgurl "$@"

EOF
chmod +x AppRun

APPDIR=/app/
cd $APPDIR

ARCH=$(arch)
patch_usr

cp -ru /usr/share/mime/* /app/usr/share/mime  || true
mv /usr/local/bin/xdgurl /app/usr/bin/  || true
mv /usr/share/icons/gnome/scalable/emblems/emblem-web.svg  /app/  || true
cp  /AppImageKit/AppImageAssistant /app/  || true
cp  /AppImageKit/AppImageExtract /app/  || true
cp  /AppImageKit/AppImageMonitor /app/  || true
cp AppRun /app/  || true
cp -rfv /usr/lib64/* /app/usr/lib/  || true

# We don't bundle the developer stuff
rm -rf usr/include || true
rm -rf usr/lib/pkgconfig || true
rm -rf usr/share/gettext || true
rm -rf usr/share/pkgconfig || true
rm -rf usr/share/cmake3 || true
rm -rf usr/share/cmake || true
rm -rf usr/local/* || true
rm -rf opt/* || true
rm -rf ./usr/mkspecs/ || true
rm -rf /usr/lib64
rm -rf /usr/lib
find . -name '*.a' -exec rm {} \;
delete_blacklisted

# Copy in the indirect dependencies
FILES=$(find . -type f -executable)
DEPS=""
for FILE in $FILES ; do
  ldd "${FILE}" | grep "=>" | awk '{print $3}' | xargs -I '{}' echo '{}' >> DEPSFILE
done
DEPS=$(cat DEPSFILE  |sort | uniq)
for FILE in $DEPS ; do
  if [ -f $FILE ] ; then
    echo $FILE
    cp --parents -rvfL $FILE /app/
  fi
done
rm -f DEPSFILE

cd /
# Copy desktop file in place
DESKTOP=$(find . -name "*$LOWERAPP.desktop" | head -n 1)
cp $DESKTOP . || true
echo $DESKTOP
echo Icon=emblem-web >> $LOWERAPP.desktop
# Add desktop integration
get_desktopintegration <%= name %>
mv /usr/bin/$LOWERAPP.wrapper /app/usr/bin/
mkdir -p /$APP/$APP.AppDir
cd /$APP/

mv -v ../app/* $APP.AppDir/
cp /$LOWERAPP.desktop  $APP.AppDir/
update-mime-database $APP.AppDir/usr/share/mime/

/AppImageKit/AppImageAssistant.AppDir/package <%= proper_name %>.AppDir/ /out/$APP-$VERSION-$ARCH.AppImage
